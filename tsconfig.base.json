{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blueskyfish/backend-commons": [
        "packages/backend/lib/commons/src/index.ts"
      ],
      "@blueskyfish/backend-database": [
        "packages/backend/lib/database/src/index.ts"
      ],
      "@blueskyfish/backend-platform": [
        "packages/backend/lib/platform/src/index.ts"
      ],
      "@blueskyfish/backend-queue": ["packages/backend/lib/queue/src/index.ts"],
      "@blueskyfish/backend-user": ["packages/backend/lib/user/src/index.ts"],
      "@blueskyfish/commons": ["packages/node/lib/commons/src/index.ts"],
      "@blueskyfish/frontend-auth-util": [
        "packages/frontend/lib/util/auth-util/src/index.ts"
      ],
      "@blueskyfish/frontend-commons": [
        "packages/frontend/lib/commons/src/index.ts"
      ],
      "@blueskyfish/frontend-dashboard": [
        "packages/frontend/lib/dashboard/src/index.ts"
      ],
      "@blueskyfish/frontend-elements": [
        "packages/frontend/lib/elements/src/index.ts"
      ],
      "@blueskyfish/frontend-theme": [
        "packages/frontend/lib/theme/src/index.ts"
      ],
      "@blueskyfish/frontend-user-pages": [
        "packages/frontend/lib/user-pages/src/index.ts"
      ],
      "@blueskyfish/frontend-user-store": [
        "packages/frontend/lib/user-store/src/index.ts"
      ],
      "@blueskyfish/frontend-user-api": [
        "packages/frontend/lib/user-api/src/index.ts"
      ],
      "@blueskyfish/grundel": ["packages/node/lib/grundel/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
